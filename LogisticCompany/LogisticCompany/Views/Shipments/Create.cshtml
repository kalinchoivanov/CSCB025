@model LogisticCompany.Models.Shipment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
            <div class="form-group">
                <textarea asp-for="Description" class="control-label">Type</textarea>
                <select asp-for="Description" class="form-control"></select>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Origin" class="control-label"></label>
                <input asp-for="Origin" class="form-control" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sender.UserName" class="control-label">Sender Username</label>
                <input asp-for="Sender.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Recipient.UserName" class="control-label">Recipient Username</label>
                <input asp-for="Recipient.UserName" class="form-control" />
                <span asp-validation-for="Recipient.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Type" class="control-label">Type</label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<ShipmentType>()" class="form-control"></select>
                <span asp-validation-for="@Model.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
