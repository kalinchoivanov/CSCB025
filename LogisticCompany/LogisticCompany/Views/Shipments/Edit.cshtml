@model LogisticCompany.Models.ViewModels.ShipmentCreateModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Origin" class="control-label"></label>
                <input asp-for="Origin" class="form-control" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenderUserName" class="control-label">Sender Username</label>
                <input asp-for="SenderUserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RecipientUserName" class="control-label">Recipient Username</label>
                <input asp-for="RecipientUserName" class="form-control" />
                <span asp-validation-for="RecipientUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Weight</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Weight</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Type" class="control-label">Type</label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<ShipmentType>()" class="form-control"></select>
                <span asp-validation-for="@Model.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
     <a asp-controller="Shipments" asp-action="Index">
         <button class="text-center btn btn-sm btn-secondary">Back to List</button>
     </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
