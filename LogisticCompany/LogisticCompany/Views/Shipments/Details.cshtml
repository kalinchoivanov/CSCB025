@model LogisticCompany.Models.Shipment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Shipment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillOfLanding)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillOfLanding)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Origin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Origin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sender.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipient.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div class="col-md-12" style="text-align:center">
    @if (Model.Status != Status.Delivered)
    {
        <a asp-controller="Shipments" asp-action="Edit" asp-route-id="@Model.Id">
            <button class="text-center btn btn-sm btn-warning">Edit</button>
        </a>
    }    
</div>
<div>
    <a asp-controller="Shipments" asp-action="Index">
        <button class="text-center btn btn-sm btn-secondary">Back to List</button>
    </a>
</div>
